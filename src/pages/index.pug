extends ../pug/layout.pug

block meta
  title Главная
  meta(name='description', content='')

block content
  .slider
    .slider__btn-prev
    .slider__wrapper
      .slider__slider
        .slider__slider-text
          p.slider-title Новое поступление книги "Симпсоны и их математические секреты
          .slider__descr
            h2.slider__descr-text Для поклонников сериала "Симпсоны" и для всех, кому интересна математика.
            a.slider__descr-link(href="/") Хочу узнать о книге больше
        .slider__slider-picture
          img.slider__image(src="img/book-simpsony-i-ih-matematicheskie-sekrety.jpg")
    .slider__btn-next

  //-  for (var i = 0; i <10: i++) {

      }
  .tabs
    ul.tabs__block
      li.tabs__block-item
        a(href='/') Все
      li.tabs__block-item
        a(href='/') Маркетинг
      li.tabs__block-item
        a(href='/') Научпоп
      li.tabs__block-item
        a(href='/') Бизнес
      li.tabs__block-item
        a(href='/') Творчество
      li.tabs__block-item
        a(href='/') Бизнес
  .catalog
    .catalog__block
      +mini-card('Латеральная логика', 'book.html', 'img/book-lateralnaya-logika.jpg', 'Головоломный путь к нестандартному мышлению', '500 Р')
      +mini-card('Путеводитель по лжи', 'book.html', 'img/book-putevoditel-po-lzhi.jpg', 'Критическое мышление в эпоху постправды', '630 Р')
      +mini-card('Дао физики', 'book.html', 'img/book-dao-fiziki.jpg', 'Исследование параллелей между современной физикой и восточной философией', '560 Р')
      +mini-card('Не очевидно', 'book.html', 'img/book-ne-ochevidno.jpg', 'Как выявлять тренды раньше других', '365 Р')
      +mini-card('Суперпотребители', 'book.html', 'img/book-superpotrebiteli.jpg', 'Кто это и почему они так важны для вашего бизнеса', '500 Р')
      +mini-card('Маркетинг в социальных сетях', 'book.html', 'img/book-social-media-marketing.jpg', '', '630 Р')
      +mini-card('Правильный выбор', 'book.html', 'img/book-pravilnyij-vyibor.jpg', 'Практическое руководство по принятию взвешенных решений', '560 Р')
      +mini-card('Главное в истории искусств', 'book.html', 'img/book-glavnoe-v-istorii-iskusstv.jpg', 'Ключевые работы, темы, направления, техники', '365 Р')
    .pagination
      ul.pagination__block
        li.pagination__block-item.pagination__block-item--active
          a(href='/') 1
        li.pagination__block-item
          a(href='/') 2
        li.pagination__block-item
          a(href='/') 3
        li.pagination__block-item
          a(href='/') 4
        li.pagination__block-item
          a(href='/') 5
        li.pagination__block-item
          a(href='/') ...
        li.pagination__block-item
          a(href='/') 10

  .delivery
    h2.delivery__title Доставим в любое место
    p.delivery__descr // Ну почти в любое
    ul.delivery__block
        li.delivery__block-item
          img.delivery__block-image
          p.delivery__item-text Покупайте книги на сайте в любимом формате - бумажные, электронные или аудио.
        li.delivery__block-item
          img.delivery__block-image
          p.delivery__item-text Мы подарим вам "Набор читателя" и добавим в посылку.
        li.delivery__block-item
          img.delivery__block-image
          p.delivery__item-text Бесплатно доставляем заказы от 3000 рублей по всей России.
        li.delivery__block-item
          img.delivery__block-image
          p.delivery__item-text Доставка в более чем 300 городов России, по Москве и Санкт-Петербургу бесплатно

  .newl
    h2.newl__title Наши новинки
    a.newl__link(href='/')  Все новинки
    .newl__block
      +mini-card('Латеральная логика', 'book.html', 'img/book-lateralnaya-logika.jpg', 'Головоломный путь к нестандартному мышлению')
      +mini-card('Путеводитель по лжи', 'book.html', 'img/book-putevoditel-po-lzhi.jpg', 'Критическое мышление в эпоху постправды')
      +mini-card('Дао физики', 'book.html', 'img/book-dao-fiziki.jpg', 'Исследование параллелей между современной физикой и восточной философией')
      +mini-card('Не очевидно', 'book.html', 'img/book-ne-ochevidno.jpg', 'Как выявлять тренды раньше других')






